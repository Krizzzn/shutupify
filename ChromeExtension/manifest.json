{
  "manifest_version": 2,

  "name": "shutupify, for Chrome!",
  "description": "Control playback of HTML audio elements with shutupify.",
  "version": "@VERSION@",
  "background": { "scripts": ["shutupify.js"] },
  "permissions": [
    "tabs","<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon-stop.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shutupify-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://www.youtube.com/embed/*"],
      "js": ["shutupify-content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }    
  ]
}